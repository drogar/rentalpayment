<h1>Listing people</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Name</th>
    <th>City</th>
    <th>Province or state</th>
    <th>Postal code</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.email %></td>
    <td><%= person.salutation.salutation %> <%= person.first_name %> <%= person.last_name %></td>
    <td><%= person.city %></td>
    <td><%= person.province_or_state %></td>
    <td><%= person.postal_code %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

