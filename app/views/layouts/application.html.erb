<!DOCTYPE html>
<html>
<head>
  <title>Rental Payment</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>
  <div id='banner'>
    <%= image_tag("logo.png") %>
    <%= @page_title || 'Rental Payer!' %>
</div>
<div id='columns'>
  <div id='side'>
    <ul>
      <li><a href="/">Home</a></li>
      <% if current_user 
           if current_user.has_role?("Admin")%>
      <li class='menuheader'>Admin Functions
      <ul>
        <li><%= link_to 'People', Person %></li>
        <li><%= link_to 'Salutations', Salutation %></li>
       <!-- <li>< link_to 'Assignments', Assignment ></li> -->
        <li><%= link_to 'Property Types', PropertyType %></li>
      </ul>
      </li>
        <% end
           if current_user.has_role?("Landlord")%>
      <li class='menuheader'>Landlords:
      <ul>
        <li><%= link_to 'My Info', Person.find_by_email(current_user.email) %></li>
        <li><%= link_to 'Properties', Property %></li>
        <!-- <li>< link_to 'Leases', Lease ></li> -->
      </ul></li>
        <% end
        end%>
    </ul>
  </div>  
  <div id='main'> 
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>     
<%= yield %>
  </div>
</div>
</body>
</html>
