<h1>Listing properties</h1>

<table>
  <tr>
    <th>Property name</th>
    <th>Description</th>
    <th>Address</th>
    <th>Number of units</th>
    <th>Type</th>
    <th>Owner</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @properties.each do |property| %>
  <tr>
    <td><%= property.property_name %></td>
    <td><%= property.description %></td>
    <td><%= render  :partial => "shared/formatted_address", :locals => {:address=>property} %></td>
    <td><%= property.number_of_units %></td>
    <td><%= property.property_type.property_type%></td>
    <td><%= property.person.display_name%></td>
    <td><%= link_to 'Show', property %></td>
    <td><%= link_to 'Edit', edit_property_path(property) %></td>
    <td><%= link_to 'Destroy', property, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

